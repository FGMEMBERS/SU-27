<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
<!-- red flashing beacon -->

<animation>
    <type>material</type>
    <object-name>Ball</object-name>
    <object-name>Ball.bottom</object-name>
    <condition>
      <not><property>sim/multiplay/generic/int[7]</property></not>
    </condition>
    <emission>
      <red>1.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
      <factor-prop>controls/lighting/beacon-state/state</factor-prop>
    </emission>
  </animation>
  <model>
    <name>Beacon1</name>
    <path>Aircraft/SU-27/Models/Lights/normal/Beacon.xml</path>
    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>
  
  <model>
    <name>BeaconRemb1</name>
    <path>Aircraft/SU-27/Models/Lights/remb/BeaconRemb.xml</path>
    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
      <pitch-deg>6</pitch-deg>
    </offsets>
  </model>
  
 
 
</PropertyList>
