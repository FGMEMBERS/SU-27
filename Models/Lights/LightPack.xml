<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- nav lights -->
  <!-- green and red navigation lights, usually mounted on the wingtips -->
  <!-- note: default orientation is up -->
  <model>
    <name>GreenLight</name>
    <path>Aircraft/SU-27/Models/Lights/GreenLight.xml</path>
    <offsets>
      <x-m>16.12</x-m>
      <y-m> 7.5</y-m>
      <z-m> 0.32 </z-m>
      <roll-deg>-90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  <model>
    <name>RedLight</name>
    <path>Aircraft/SU-27/Models/Lights/RedLight.xml</path>
    <offsets>
       <x-m> 16.12 </x-m>
      <y-m> -7.5</y-m>
      <z-m> 0.32</z-m>
      <roll-deg>90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  
  <!-- beacon -->
  <!-- bright red flashing light -->
  <!-- note: default orientation is up -->
  <model>
    <name>Beacon1</name>
    <path>Aircraft/SU-27/Models/Lights/Beacon.xml</path>
    <offsets>
     <x-m> 16.12 </x-m>
      <y-m> -7.5</y-m>
      <z-m> 0.32</z-m>
      <pitch-deg>6</pitch-deg>
    </offsets>
  </model>
